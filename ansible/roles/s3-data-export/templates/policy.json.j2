{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Principal": {
                "AWS": "{{ aws_user_arn }}"
            },
            "Action": [
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::{{ bucket_name }}"
            ]
        },
        {
            "Sid": "DataExportStatement01",
            "Effect": "Allow",
            "Principal": {
                "AWS": "{{ aws_user_arn }}"
            },
            "Action": [
                "s3:PutObject",
                "s3:GetObject",
                "s3:DeleteObject"
            ],
            "Resource": [
                "arn:aws:s3:::{{ bucket_name }}/*"
            ]
        }
    ]
}
